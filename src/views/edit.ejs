<%- include('partials/_header') %>


<div class="conatainer">
    <div class="row">
        <!--Form-->
        <div class="col-md-5 offset-md-3">
            <div class="card">
                <div class="card-body">
                    <form action="/edit/<%= task._id  %> " method="POST">  <!--mediante metodo post llamo mi archivo add-->
                        <div class="form-group">
                            <input type="text" name="title" placeholder="insert a title" class="form-control mb-2" value="<%= task.title %> ">
                        </div>
                        <div class="form-group">
                            <textarea name="description" id="" cols="80" class="form-control mb-2" placeholder="insert a description"><%= task.description %>                     
                            </textarea>
                        </div>
                        <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary ">Update</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


